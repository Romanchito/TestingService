<table class="table table-striped table-condensed table-bordered">
    <tr>        
        <th class="text-center">ФИО</th>
        <th class="text-center">Адрес</th>
        <th class="text-center">Роль</th>
        <th class="text-center"></th>
    </tr>

    @foreach (var u in ViewBag.Users)
    {
        int id = u.Id;
        string name = u.Surname + " " + u.Name + " " + u.Patronomic ;
        <tr>            
            <td class="text-center">@Html.ActionLink(name, "EditUser", "Admin", new { userId = id }, null)</td>
            <td class="text-center">@u.Email</td>
            <td class="text-center">
                @if (u.RoleId == 1)
                {
                   <text>Администратор</text>
                }
                @if (u.RoleId == 2)
                {
                    <text>Преподаватель</text>
                }
                @if (u.RoleId == 3)
                {
                    <text>Ученик</text>
                }
            </td>
            <td class="text-center">
                @using (Html.BeginForm("DeleteUser", "Admin"))
                {
                    @Html.Hidden("userId", id)
                    <input type="submit" class="btn btn-danger btn-xs" value="Удалить" />
                }
            </td>
        </tr>

    }
</table>

@Html.ActionLink("Добавить", "CreateUser", null, new { @class = "btn btn-default" })
