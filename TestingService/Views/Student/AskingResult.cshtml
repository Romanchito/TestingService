@model TestingService.Models.ViewModels.ViewResultModel

@{
    ViewBag.Title = "Result";
    int i = 1;
}

<h2>Результат опроса</h2>

<script>
    function onDeleteAll() {
        console.log("Deleted all history");
    }

    function deleteAllHistory() {
        var deletingAll = browser.history.deleteAll();
        deletingAll.then(onDeleteAll);
    }

    deleteAllHistory();
</script>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        @foreach (var item in Model.Answers)
        {
            if (item.isTrue)
            {
                <th class="text-center" style="background-color:forestgreen">@i</th>
            }
            else
            {
                <th class="text-center" style="background-color:darkgrey">Не отвечено</th>
            }
            i++;
        }
    </tr>
</table>

<div>   
    <hr />
    <dl class="dl-horizontal" style="font-size: 20px">
        <dt>
           Спасибо!
        </dt>      
        <dd style="color:red">
            
        </dd>
    </dl>
</div>
